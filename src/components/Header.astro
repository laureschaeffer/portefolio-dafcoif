---
import HeaderLink from "./HeaderLink.astro"

---

<header>
    <nav class="flex flex-row items-center justify-between px-6 py-4 shadow-xl">
        <HeaderLink href="/" class="titre logo">Dafcoif</HeaderLink>
        
        <!-- menu burger -->
        <button id="menu-toggle" class="md:hidden text-xl">
            &#9776;
        </button>
        
        <!-- Menu de navigation -->
        <div id="menu" class="hidden md:flex flex-col md:flex-row gap-6 text-xl absolute md:static top-16 left-0 w-full md:w-auto md:bg-transparent shadow-md md:shadow-none p-4 md:p-0">
            <HeaderLink href="/propos">A propos</HeaderLink>
            <HeaderLink href="/travail">Travail</HeaderLink>
        </div>
    </nav>
</header>

<script>
    const menuToggle = document.getElementById('menu-toggle') as HTMLButtonElement;
    const menu = document.getElementById('menu') as HTMLDivElement;

    menuToggle.addEventListener('click', () => {
        menu.classList.toggle('hidden');
        menu.classList.toggle('flex');
        menu.classList.add('bg-couleur');
    });
</script>