---
import Layout from '../layouts/App.astro';
import { Image } from 'astro:assets';
import profilImage from '../assets/img/profil.jpg';
import iconeImage from '../assets/img/icone_1.png';

import balayageImage from '../assets/img/travail_9.jpg';
import couleurCreativeImg from '../assets/img/travail_2.jpg';
import coupeAlternativeImg from '../assets/img/travail_6.jpg';


// Tableau des spécialités
const specialites = [
	{
	titre: "Balayage",
	description: "Technique de coloration qui crée un dégradé naturel et lumineux, parfait pour ajouter de la dimension.",
	image: balayageImage,
	alt: "exemple balayage",
	},
	{
	titre: "Couleur créative",
	description: "Des couleurs vibrantes et audacieuses pour ceux qui souhaitent exprimer leur personnalité unique.",
	image: couleurCreativeImg,
	alt: "exemple couleur créative",
	},
	{
	titre: "Coupe alternative",
	description: "Des styles innovants et originaux pour affirmer votre individualité avec audace.",
	image: coupeAlternativeImg,
	alt: "exemple coupe alternative",
	},
];
---

<Layout
	title="Dafcoiff - A propos"
	description="Découvrez [Nom du Salon], votre coiffeuse coloriste originale à Strasbourg. Spécialiste des couleurs audacieuses, du balayage sur-mesure et des transformations capillaires uniques. Offrez à vos cheveux une touche de créativité et de style !"
>

<!-- première section description, photo, anecdote -->
<section class="py-10 px-4">
	<h1 class="titre text-center">A propos</h1>

	<!-- container -->
	<div class="flex flex-col items-center py-12 gap-12 md:grid md:grid-cols-2 md:py-20 md:px-16">
		<p class="text-center md:text-left">
			Je crois que les cheveux sont une forme d'expression personnelle. Mon approche est centrée sur l'écoute et la compréhension de vos désirs, tout en tenant compte de vos habitudes avec vos cheveux. <br><br>
			La santé capillaire est primordiale dans mon travail, car une belle chevelure commence par des cheveux en bonne santé.
		</p>
		<div class="flex justify-center">
			<Image src={profilImage} alt="Photo de Daphné" />
		</div>

		<!-- style ici  -->
		<div class="card__daf flex flex-col items-center border-2 border-[#C2A7FF] py-6 px-4 gap-6">
			<h2 class="titre whitespace-nowrap">Daphné, 'Dafcoiff'</h2>
			<p class="text-center">est une coiffeuse <span class="lavende">créative</span> basée à Strasbourg</p>
		</div>
		<div class="card__citation flex flex-col items-center text-center gap-4">
			<Image src={iconeImage} alt="Icone étincelle" class="w-8" />
			<span class="sous-titre">“Ma coiffure c'est entre du tuning et Kim Kardashian”</span>
			<Image src={iconeImage} alt="Icone étincelle" class="w-8" />
		</div>
	</div>
</section>

<!-- deuxième section, bandeau bleu -->
<div class="flex flex-col items-center gap-6 py-6 bg-[#630ACD] text-white text-center md:flex-row md:justify-around">
	<!-- card -->
	<div class="flex flex-col items-center">
		<span class="titre">7</span>
		<span>ans de pratique</span>
	</div>
	<!-- card -->
	<div class="flex flex-col items-center">
		<span class="titre">+500</span>
		<span>cheveux pimpés</span>
	</div>
	<!-- card -->
	<div class="flex flex-col items-center">
		<span class="titre">+100</span>
		<span>clients réguliers</span>
	</div>
</div>

<!-- troisième section mes spécialités -->
<section class="py-20 px-4">
	<h2 class="titre text-center">Mes spécialités</h2>

	<!-- container cards -->
	<div class="flex flex-col items-center gap-8 mt-8 md:flex-row md:justify-center xl:justify-evenly">
		
		{specialites.map(({ titre, description, image, alt }) => (
			<article class="card__specialite w-full max-w-[300px] flex flex-col items-center">
				<figure class="cropped-figure">
					<Image src={image} alt={alt} class="cropped-img" />
				</figure>
				<div class="flex flex-col justify-center bg-lavende text-black py-4 px-2 w-[300px] h-[170px] text-center" id="specialite__card-content">
					<h3 class="sous-titre">{titre}</h3>
					<p class="text-sm">{description}</p>
				</div>
			</article>
		))}

	</div>
</section>

<script>
	import gsap from "gsap";
	import ScrollTrigger from "gsap/ScrollTrigger";
  
	gsap.registerPlugin(ScrollTrigger);
  
	// ***********************Daphne, Dafcoiff *********************** 
	gsap.fromTo(
		".card__daf",
		{ opacity: 0, x: -200 },
		{
			opacity: 1,
			x: 0,
			duration: 1,
			ease: "power3.inOut",
			scrollTrigger: {
				trigger: ".card__daf",
				start: "top 80%",
				toggleActions: "play none none reset"
			}
		}
	);

	// ***********************citation *********************** 
	gsap.fromTo(
		".card__citation",
		{ opacity: 0, x: 50 },
		{
			opacity: 1,
			x: 0,
			duration: 1,
			delay: 0.5,
			ease: "power3.inOut",
			scrollTrigger: {
				trigger: ".card__citation",
				start: "top 80%",
				toggleActions: "play none none reset"
			}
		}
	);
	
	// *********************** specialités *********************** 
	gsap.fromTo(
		".card__specialite",
		{ opacity: 0, y: 50 },
		{
			opacity: 1,
			y: 0,
			duration: 1,
			ease: "power2",
			stagger: 0.4,
			scrollTrigger: {
				trigger: ".card__specialite",
				toggleActions: "play none none reset"
			}
		}
	);
	
</script>

</Layout>
